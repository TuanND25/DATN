<style>
	.dropdown {
		position: relative;
		display: inline-block;
	}

		.dropdown img {
			height: 25px;
			object-fit: cover;
			cursor: pointer;
			transition: transform 0.3s ease;
		}

		.dropdown:hover img {
			transform: scale(1.1);
		}

	.dropdown-content {
		display: none;
		position: absolute;
		background-color: #f9f9f9;
		min-width: 200px;
		padding: 10px;
		box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
		z-index: 1;
		left: 50%;
		transform: translateX(-50%);
		color: #333;
	}

	.dropdown:hover .dropdown-content {
		display: block;
	}

	.dropdown-content a {
		display: flex;
		align-items: center;
		margin-bottom: 10px;
		color: #333;
		text-decoration: none;
	}

		.dropdown-content a i {
			margin-right: 10px;
		}

		.dropdown-content a:hover {
			color: #86d6ff;
		}

	.user-header {
		display: flex;
		align-items: center;
	}

		.user-header img {
			height: 25px;
			object-fit: cover;
			margin-right: 10px;
		}

		.user-header .user-text {
			color: #333;
		}
</style>
