<div class="card">
	<div class="card-body">
		<h4 class="card-title">General Form Elements</h4>

		<!-- General Form Elements -->
		<EditForm Model="voucher">
			<div class="row mb-3">
				<label for="inputText" class="col-sm-4 col-form-label">Tên Voucher</label>
				<div class="col-sm-8">
					<InputText class="form-control" @bind-Value="voucher.Name"/>
				</div>
			</div>
				<div class="row mb-3">
				<label for="inputText" class="col-sm-4 col-form-label">Code</label>
				<div class="col-sm-8">
					<InputText class="form-control" @bind-Value="voucher.Code"/>
				</div>
			</div>

			<div class="row mb-3">
				<label for="inputNumber" class="col-sm-4 col-form-label">Số tiền</label>
				<div class="col-sm-8">
					<InputNumber class="form-control" @bind-Value="voucher.Reduced_Value"/>
				</div>
			</div>

			<div class="row mb-3">
				<label for="inputNumber" class="col-sm-4 col-form-label">Số lượng</label>
				<div class="col-sm-8">
					<InputNumber class="form-control" @bind-Value="voucher.Quantity" />
				</div>
			</div>


			<div class="row mb-3">
				<label for="inputDate" class="col-sm-4 col-form-label">Ngày bắt đầu</label>
				<div class="col-sm-8">
					<input type="datetime-local" class="form-control" @bind-value="@voucher.StartDate" />
				</div>
			</div>


			<div class="row mb-3">
				<label for="inputDate" class="col-sm-4 col-form-label">Ngày kết thúc</label>
				<div class="col-sm-8">
					<input type="datetime-local" class="form-control" @bind-value="@voucher.EndDate">
				</div>
			</div>




			<div class="row mb-3">
				<label for="inputPassword" class="col-sm-4 col-form-label" style="font-size:14px">Mô tả</label>
				<div class="col-sm-8">
					<InputTextArea class="form-control" style="height: 50px" @bind-Value="voucher.Discount_Conditions"/>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Tình trạng</label>
				<div class="col-sm-8">
					<div class="row">
						<InputRadioGroup @bind-Value="voucher.Status" class="form-control">
							<div class="col-sm-6">
								<InputRadio Value="1" /> Hoạt động
							</div>
							<div class="col-sm-6">
								<InputRadio Value="0" /> Ngừng hoạt động
							</div>
						</InputRadioGroup>
					</div>
				</div>
			</div>


			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Submit </label>
				<div class="col-sm-8">
					<button type="submit" class="btn btn-primary" @onclick="AddVoucher" >Create</button>
					<button type="submit" class="btn btn-primary" >Update</button>
				</div>
								
			</div>
		</EditForm><!-- End General Form Elements -->
	</div>
</div>
@{
	int count = 1;
	
}

<div class="card">
	<div class="card-body">
		<div class="pagetitle">
		</div>
		@if (listvouchers == null)
		{
			<p><em>Loading...</em></p>
		}
		else
		{
			<table class="table">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Tên</th>
						<th scope="col">Code</th>
						<th scope="col">Số tiền</th>
						<th scope="col">Số lượng</th>
						<th scope="col">Ngày bắt đầu</th>
						<th scope="col">Ngày kết thúc</th>
						<th scope="col">Mô tả</th>
						<th scope="col">Tình trạng</th>
					</tr>
				</thead>
				<tbody>

					@foreach (var a in listvouchers)
					{
						<tr>
							<th>@(count++)</th>
							<th>@a.Name</th>
							<th>@a.Code</th>
							<th>@a.Reduced_Value</th>
							<th>@a.Quantity</th>
							<th>@a.StartDate</th>
							<th>@a.EndDate</th>
							<th>@a.Discount_Conditions</th>
							<th>@a.Status</th>
						</tr>
					}

				</tbody>
			</table>
		}
	</div>
</div>